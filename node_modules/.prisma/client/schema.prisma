datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String
  criadoEm DateTime @default(now())
  obras    Obra[]   @relation("ServidorObras")
}

model Obra {
  id          Int         @id @default(autoincrement())
  nome        String
  localizacao String
  empresa     String
  cronograma  String
  orcamento   Float
  status      String
  documentos  Documento[]
  servidorId  Int
  servidor    Usuario     @relation("ServidorObras", fields: [servidorId], references: [id])
  criadoEm    DateTime    @default(now())
  etapas      Etapa[]
}

model Documento {
  id     Int    @id @default(autoincrement())
  nome   String
  url    String
  obraId Int
  obra   Obra   @relation(fields: [obraId], references: [id])
}

model Etapa {
  id     Int    @id @default(autoincrement())
  nome   String
  status String
  obraId Int
  obra   Obra   @relation(fields: [obraId], references: [id])
}
