generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String
  criadoEm DateTime @default(now())

  obras Obra[] @relation("ServidorObras")
}

model Obra {
  id          Int      @id @default(autoincrement())
  nome        String
  localizacao String
  empresa     String
  cronograma  String
  orcamento   Float
  status      String
  criadoEm    DateTime @default(now())

  servidorId Int
  servidor   Usuario @relation("ServidorObras", fields: [servidorId], references: [id])

  documentos Documento[]
  etapas     Etapa[]
  melhorias  Melhoria[] // Relação com sugestões/denúncias/elogios dos cidadãos
}

model Documento {
  id     Int    @id @default(autoincrement())
  nome   String
  url    String
  obraId Int
  obra   Obra   @relation(fields: [obraId], references: [id])
}

model Etapa {
  id     Int    @id @default(autoincrement())
  nome   String
  status String
  obraId Int
  obra   Obra   @relation(fields: [obraId], references: [id])
}

model Melhoria {
  id       Int      @id @default(autoincrement())
  nome     String? // opcional
  email    String? // opcional
  mensagem String
  tipo     String // sugestao, denuncia ou elogio
  obraId   Int? // opcional
  obra     Obra?    @relation(fields: [obraId], references: [id])
  criadoEm DateTime @default(now())
}

model EtapaHistorico {
  id         Int      @id @default(autoincrement())
  etapaId    Int
  nome       String
  status     String
  alteradoEm DateTime @default(now())
}
